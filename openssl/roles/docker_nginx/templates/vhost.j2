server {
    listen       *:443;
    server_name  {{item}};
    ssl on;
    ssl_certificate /crt/crt/{{item}}.crt;
    ssl_certificate_key /crt/pk/{{item}}.nopass.pem;
    ssl_client_certificate /crt/CA.crt;
#    ssl_verify_client on;

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

}
